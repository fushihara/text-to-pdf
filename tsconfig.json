{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "lib": [
      "esnext",
      "DOM"
    ],
    "strict": true,
    "moduleResolution": "Node16",
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "ts-node": {
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}